<!DOCTYPE html>
<html>
  <head>
    <title>CartApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css' %>
    <%= javascript_include_tag 'http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js' %>
 	<%= stylesheet_link_tag 'bootstrap.min.css' %>
	<%= stylesheet_link_tag 'font-awesome.min.css' %>
	<%= stylesheet_link_tag 'animate.css' %>
	<%= stylesheet_link_tag 'prettyPhoto.css' %>
	<%= stylesheet_link_tag 'style.css' %>

  </head>

  <body>
  
  <header>		
		<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
			<div class="navigation">
				<div class="container">					
					<div class="navbar-header">
						<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse.collapse">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
					<div class="navbar-brand">
					<%= link_to image_tag("image.jpg") + "ScootersRus", 
                         root_path %>
						
					</div>		
					
					</div>
					
					<div class="navbar-collapse collapse">							
						<div class="menu">
							<ul class="nav nav-tabs" role="tablist">
								<li role="presentation"><a <%= link_to "Home", root_path %> </a></li>
								<li role="presentation"><a <%= link_to "Shop", products_path %></a></li>
								<li role="presentation"><a <%= link_to "About", page_about_path %></a></li>								
								<li role="presentation"><a <%= link_to "FAQ's", page_faqs_path %></a></li>
								<li role="presentation"><a <%= link_to "Contact Us", page_contact_path %></a></li>
								<li role="presentation"><a href="contact.html">Contact</a></li>						
						
							
		<% if user_signed_in? %>
		<li role="presentation" class="sign_in">	<%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
		<% else %>
		<li role="presentation" class="sign_in">	<%= link_to "Sign In", new_user_session_path %></li>
		<li role="presentation" class="sign_in">	<%= link_to "Sign Up", new_user_registration_path %></li>
		<% end %>
		</ul>
						</div>
					</div>						
				</div>
			</div>	
		</nav>		
	</header>




<div class="container">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  
    <%= yield %>
</div>

  <footer>
		<div class="footer">
			<div class="container">
				<div class="social-icon">
					<div class="col-md-4">
						<ul class="social-network">
							<li><a href="https://www.facebook.com/jose.urbina.1671897" class="fb tool-tip" title="Facebook"><i class="fa fa-facebook"></i></a></li>
							<li><a href="#" class="twitter tool-tip" title="Twitter"><i class="fa fa-twitter"></i></a></li>
							<li><a href="#" class="gplus tool-tip" title="Google Plus"><i class="fa fa-google-plus"></i></a></li>
							<li><a href="#" class="linkedin tool-tip" title="Linkedin"><i class="fa fa-linkedin"></i></a></li>
							<li><a href="#" class="ytube tool-tip" title="You Tube"><i class="fa fa-youtube-play"></i></a></li>
						</ul>	
					</div>
				</div>
				
				<div class="col-md-4 col-md-offset-4">
					<div class="copyright">
						&copy;  <span id ="fecha2"> </span> by <a target="_blank" href="#" title="Web and Mobile Designs ">U- WEB</a>. All Rights Reserved.
					</div>
                    <!-- 
                        All links in the footer should remain intact. 
                        Licenseing information is available at: http://bootstraptaste.com/license/
                        You can buy this theme without footer links online at: http://bootstraptaste.com/buy/?theme=Company
                    -->
				</div>						
			</div>
			
			<div class="pull-right">
				<a href="#home" class="scrollup"><i class="fa fa-angle-up fa-3x"></i></a>
			</div>		
		</div>
	</footer>

	
	
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
	<%= javascript_include_tag "jquery-2.1.1.min.js"%>	
    <!-- Include all compiled plugins (below), or include individual files as needed -->
   <%= javascript_include_tag "bootstrap.min.js"%>
	<%= javascript_include_tag "jquery.prettyPhoto.js"%>	
    <%= javascript_include_tag "jquery.isotope.min.js"%>
   <%= javascript_include_tag "wow.min.js"%>	
     <%= javascript_include_tag "functions.js"%>		  
	
		
	
	
  </body>	
</html>
