<h1>THIS IS MY PRODUCT</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Descripcion</th>
       <th>Price</th>
       <th>Category</th>
       <th>Sub Category</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row"><%= image_tag @product.image_url, :alt => "Google +", :title => "Google +"%>
      <th scope="row"> <%= @product.title %></th>
      <td> <%= @product.description %></td>
      <td> <%= @product.price %></td>
      <td>  <%= @product.category %></td>
      <td> <%= @product.subcategory %></td>
      <td><%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-success' %></td>
      <td><%= link_to 'Back', products_path, class: 'btn btn-success' %></td>
    </tr>
  </tbody>
</table>





