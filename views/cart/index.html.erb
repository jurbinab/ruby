<h1>Your Cart</h1>

	<% if @cart.empty? %>
		<p>Your cart is currently empty</p>
	<% else %>
		<%= link_to'Empty Your Cart', cart_clear_path %>
	<% end %>

	
<br><br><br>

<% total = 0 %>




<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart.each do |id, quantity| %>
    <% product = Product.find_by_id(id) %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= image_tag(product.image_url, width: '30px', height: '30px')%></td>
        <td><%= number_to_currency(product.price, :unit => '$') %></td>
        <td><%= quantity %></td>
        <td><%= number_to_currency(total, :unit => '$') %></td>
        <td><%= link_to 'Delete', class: 'btn btn-success' %></td>
   btn-success' %></td>
		
    <% end %>
  </tbody>
</table>

<% if session[:cart] %>
 
  <%= link_to 'Continue Shopping', products_path, class: 'btn btn-success' %>
<% end %>
